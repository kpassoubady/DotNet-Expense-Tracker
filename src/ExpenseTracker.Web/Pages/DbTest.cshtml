@page
@model ExpenseTracker.Web.Pages.DbTestModel
@{
    ViewData["Title"] = "Database Connection Test";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="mb-4">Database Connection Test</h1>
            
            @if (Model.IsConnected)
            {
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">✓ Database Connected Successfully!</h4>
                    <hr>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h5 class="card-title">Categories</h5>
                                    <p class="card-text display-4">@Model.CategoryCount</p>
                                    <small class="text-muted">Total records</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card text-center">
                                <div class="card-body">
                                    <h5 class="card-title">Expenses</h5>
                                    <p class="card-text display-4">@Model.ExpenseCount</p>
                                    <small class="text-muted">Total records</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <p class="mb-0"><strong>Connection String:</strong> <code>@Model.ConnectionString</code></p>
                        <p class="mb-0"><strong>Database Provider:</strong> SQLite</p>
                        <p class="mb-0"><strong>Test Time:</strong> @Model.TestTime.ToString("yyyy-MM-dd HH:mm:ss")</p>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">✗ Database Connection Failed</h4>
                    <hr>
                    <p>@Model.ErrorMessage</p>
                </div>
            }
            
            <div class="mt-4">
                <a href="/" class="btn btn-primary">Back to Home</a>
                <a href="/DbTest" class="btn btn-secondary">Refresh Test</a>
            </div>
        </div>
    </div>
</div>
