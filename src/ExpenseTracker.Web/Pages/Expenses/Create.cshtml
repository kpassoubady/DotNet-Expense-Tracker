@page
@model ExpenseTracker.Web.Pages.Expenses.CreateModel
@{
    ViewData["Title"] = "Create Expense";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-plus me-2"></i>Create New Expense
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Expense.Description" class="form-label">Description <span class="text-danger">*</span></label>
                            <input asp-for="Expense.Description" class="form-control" placeholder="e.g., Lunch at restaurant" />
                            <span asp-validation-for="Expense.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Expense.Amount" class="form-label">Amount <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Expense.Amount" type="number" step="0.01" min="0.01" class="form-control" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Expense.Amount" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Expense.ExpenseDate" class="form-label">Date <span class="text-danger">*</span></label>
                            <input asp-for="Expense.ExpenseDate" type="date" class="form-control" />
                            <span asp-validation-for="Expense.ExpenseDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Expense.CategoryId" class="form-label">Category <span class="text-danger">*</span></label>
                            <select asp-for="Expense.CategoryId" asp-items="Model.CategoryOptions" class="form-select">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="Expense.CategoryId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Create Expense
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
