@page "{id:guid}"
@model ExpenseTracker.Web.Pages.Expenses.DeleteModel
@{
    ViewData["Title"] = "Delete Expense";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Delete Expense
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-warning me-2"></i>
                        <strong>Warning:</strong> This action cannot be undone.
                    </div>

                    <h5>Are you sure you want to delete this expense?</h5>
                    
                    <div class="card mt-3 mb-4">
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Description</dt>
                                <dd class="col-sm-8">@Model.Expense?.Description</dd>

                                <dt class="col-sm-4">Amount</dt>
                                <dd class="col-sm-8 fw-bold">@Model.Expense?.Amount.ToString("C")</dd>

                                <dt class="col-sm-4">Date</dt>
                                <dd class="col-sm-8">@Model.Expense?.ExpenseDate.ToString("MM/dd/yyyy")</dd>

                                <dt class="col-sm-4">Category</dt>
                                <dd class="col-sm-8">
                                    <span class="badge" style="background-color: @Model.Expense?.CategoryColor">
                                        @Model.Expense?.CategoryName
                                    </span>
                                </dd>

                                <dt class="col-sm-4">Created</dt>
                                <dd class="col-sm-8">@Model.Expense?.CreatedAt.ToString("MM/dd/yyyy HH:mm")</dd>
                            </dl>
                        </div>
                    </div>

                    <form method="post">
                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-1"></i>Delete Expense
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
